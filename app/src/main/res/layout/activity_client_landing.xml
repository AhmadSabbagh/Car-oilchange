<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/bg_cars"
    tools:openDrawer="start">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context=".activities.MainActivity">

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"

            tools:context="ebtkar.app.oilex2.activities.PickMyPlaceActivity" />



        <include  layout="@layout/transparent_toolbar" android:id="@+id/ttt" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bg_input"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/oil_change"
                android:textColor="#808080"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/select_btn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/bg_button_round"
                android:src="@drawable/com_facebook_button_like_icon_selected" />


        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:textColor="#fff"
            android:layout_marginTop="55dp"
            android:textSize="11sp"
            android:padding="8dp"
            android:background="#d1000000"
            android:text="@string/initializaing_map"
            android:id="@+id/customer_info"
            />
    </RelativeLayout>
    <include
        layout="@layout/nav_view_body"
        />


</android.support.v4.widget.DrawerLayout>


